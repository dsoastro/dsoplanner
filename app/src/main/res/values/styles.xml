<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SkinList.Day" parent="android:Theme.Light">
        <item name="android:listViewStyle">@style/listViewList_Day</item>
        <item name="android:fastScrollEnabled">true</item>
        
    </style>

    <style name="SkinList.Onyx" parent="android:Theme.Black">
         
        <item name="android:listViewStyle">@style/listViewList_Onyx</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        
        <item name="android:textColor">@xml/onyxtext</item>
        <item name="android:textColorPrimary">@xml/onyxtext</item>
        <item name="android:textColorSecondary">@xml/onyxtext</item> 
        <item name="android:textColorTertiary">@xml/onyxtext</item> 
        <item name="android:cacheColorHint">#FFEF0000</item>

        <!-- <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item> -->
        <!-- <item name="android:textAppearanceButton">@style/RedTextButton</item> -->
        <!-- <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>  -->
        <!-- <item name="android:spinnerStyle">@style/Widget.SpinnerR</item>  -->
        <item name="android:spinnerItemStyle">@style/Widget.SpinnerItemO</item>
        <item name="android:buttonStyle">@style/Widget.ButtonB</item>
        <!-- <item name="android:checkboxStyle">@style/CheckBoxR</item> -->
        <!-- <item name="android:radioButtonStyle">@style/Widget.RadioButtonR</item> -->
        <item name="android:editTextStyle">@style/OnyxEditTextStyle</item>
        <!-- <item name="android:listSelector">@drawable/redselector</item>  -->
        <item name="android:fastScrollEnabled">true</item>
       
    </style>
	
    <style name="SkinList.Night" parent="android:Theme.Black">
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- <item name="android:background">@color/black</item>  -->
        <!-- <item name="android:navigationBarColor">@color/redfront</item> -->
        <item name="android:colorForeground">@color/redfront</item>
        <item name="android:textColor">@xml/redtext</item>
        <item name="android:listViewStyle">@style/listViewList_Night</item>
        <item name="android:textAppearanceButton">@style/RedTextButton</item>
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="android:spinnerStyle">@style/Widget.SpinnerR</item>
        <item name="android:spinnerItemStyle">@style/Widget.SpinnerItemR</item>
        <item name="android:buttonStyle">@style/Widget.ButtonR</item>
        <item name="android:checkboxStyle">@style/CheckBoxR</item>
        <item name="android:radioButtonStyle">@style/Widget.RadioButtonR</item>
        <item name="android:editTextStyle">@style/RedEditTextStyle</item>
        <item name="android:cacheColorHint">#FFFF0000</item>
        <item name="android:listSelector">@drawable/redselector</item>
        <item name="android:textColorPrimary">@xml/redtext</item>
        <item name="android:textColorSecondary">@xml/redtext</item>
        <item name="android:textColorTertiary">@xml/redtext</item>
        <item name="android:alertDialogStyle">@style/RedAlertDialog</item>
        <item name="android:scrollbarThumbVertical">@drawable/reddot</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:progressBarStyleSmallTitle">@style/ProgressBarSmallTitleNight</item>
        <!--https://medium.com/@werder630/android-textview-change-color-of-select-handlers-838616e9e327 -->
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/redselector</item>
    </style>


    <style name="SkinSky.Day" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:listViewStyle">@style/listViewSky</item>
        <item name="android:textColor">@xml/onyxtext</item>
       
    </style>

    <style name="SkinSky.Night" parent="android:Theme.Black">
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowBackground">@android:color/black</item>  -->
        <!-- <item name="android:colorBackground">@android:color/black</item>  -->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:listViewStyle">@style/listViewSky</item>
        <item name="android:colorForeground">@color/redfront</item>
        <item name="android:textColor">@xml/redtext</item>
        <item name="android:textAppearanceButton">@style/RedTextButton</item>
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="android:buttonStyle">@style/Widget.ButtonR</item>
        <item name="android:checkboxStyle">@style/CheckBoxR</item>
        <item name="android:radioButtonStyle">@style/Widget.RadioButtonR</item>
        <item name="android:editTextStyle">@style/RedEditTextStyle</item>
        <item name="android:cacheColorHint">#ff7f0000</item>
        <item name="android:textColorPrimary">@xml/redtext</item>
        <item name="android:textColorSecondary">@xml/redtext</item>
        <item name="android:textColorTertiary">@xml/redtext</item>
        <item name="android:spinnerStyle">@style/Widget.SpinnerR</item>
        <item name="android:spinnerItemStyle">@style/Widget.SpinnerItemR</item>
        <item name="android:listSelector">@drawable/redselector</item>
        <item name="android:alertDialogStyle">@style/RedAlertDialog</item>
        <item name="android:colorControlActivated">@color/redselector</item>
                
    </style>
    
    <style name="ProgressBarSmallTitleNight" parent="@android:style/Widget.ProgressBar.Small">
        
        <item name="android:indeterminateDrawable">@drawable/progress_small_titlebar</item>
        
    </style>

    <style name="SpinnerAsEditText" parent="@android:style/Widget.Spinner">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RedTextButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">@xml/redtext</item>
    </style>

    <style name="listViewSky" parent="@android:style/Widget.ListView">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="listViewList_Day" parent="@android:style/Widget.ListView.White">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="listViewList_Onyx" parent="@android:style/Widget.ListView">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@xml/onyxtext</item>
        <!-- <item name="android:divider">#ff006f1f</item>  -->
    </style>

    <style name="listViewList_Night" parent="@android:style/Widget.ListView">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@xml/redtext</item>
    	<item name="android:divider">#ff6f0000</item>
    	<item name="android:dividerHeight">1px</item>
    	<item name="android:fadingEdge">none</item>
    	<item name="android:listSelector">@drawable/redselector</item>
    </style>

    <style name="menuItem" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@xml/onyxtext</item>
    </style>

    <style name="zBox" parent="android:Theme.Black">
        <item name="android:textColor">@xml/onyxtext</item>
    </style>

    <style name="PreferenceListHeader" parent="@android:style/Widget.TextView">
        <item name="android:background">#ff3f0000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@xml/redtext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:cacheColorHint">#ff7f0000</item>
    </style>

    <style name="Widget.ButtonR" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@xml/redtext</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/red_btn</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:cacheColorHint">#ff7f0000</item>
    </style>
    
    <style name="Widget.ButtonB" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@xml/onyxtext</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/black_btn</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>
    

    <style name="Widget.CompoundButton.CheckBoxR" parent="android:Widget.CompoundButton">
        <!--<item name="android:background">@drawable/btn_check_label_background</item>
        removed to avoid weird checkbox label shift to the right -->
        <item name="android:button">@drawable/btn_check_r</item>
        <item name="android:textColor">@xml/redtext</item>
    </style>

    <style name="CheckBoxR" >
        <item name="android:background">@drawable/btn_check_label_background</item>
        <!--TODO: Verify there is no weird checkbox label right shift due to the above-->
        <item name="android:button">@drawable/btn_check_r</item>
        <item name="android:textColor">@xml/redtext</item>
    </style>

    <style name="Widget.RadioButtonR" parent="@android:style/Widget.CompoundButton.RadioButton">
   		<item name="android:background">@drawable/btn_radio_label_background</item>
        <item name="android:button">@drawable/btn_radio_r</item>
        <item name="android:textColor">@xml/redtext</item>
	</style>
