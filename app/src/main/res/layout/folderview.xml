    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView 
        android:id="@+id/fd_path" 
        android:text="Path"
        android:textSize="@dimen/text_size_normal"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
    </TextView>
    
    <ListView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/fd_list">
    </ListView>

</LinearLayout>
