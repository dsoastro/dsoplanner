<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10sp"
    android:paddingLeft="10sp"
    android:paddingRight="2dp"
    android:paddingTop="10sp" >

    <LinearLayout
        android:id="@+id/dsosel_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dsosel_ngcnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="NGC185 M1 C6"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_con"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="And"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="HIIRgn"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_mag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="6.7"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_dim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="180.0"
            android:textSize="@dimen/table_main_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/dsosel_double"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dsosel_ll"
        android:text="AB 12 15 23"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>