<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="19"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/dsosel_ngcnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="NGC1"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_con"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="And"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="HIIRgn"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_mag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="6.7"
            android:textSize="@dimen/table_main_text_size" />

        <TextView
            android:id="@+id/dsosel_dim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="18"
            android:textSize="@dimen/table_main_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:orientation="horizontal" >

        <com.astro.dsoplanner.ChB
            android:id="@+id/dsosel_ch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="false"
            android:focusable="false" />
    </LinearLayout>

</LinearLayout>